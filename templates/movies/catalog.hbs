{{> header }}

<div id="cinema">
      <h1>All Movies</h1>
      <form action="#/catalog" method="GET">
        <label>Search genre:</label>
        <input type="text" name="search" value="{{search}}">
        <input type="submit" value="Search">
      </form>
      <div class="movies">
        {{#each movies}}
        {{> movie}}
        {{/each}}
      </div>
</div>

{{> footer}}